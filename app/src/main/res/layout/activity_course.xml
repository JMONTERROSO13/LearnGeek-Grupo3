<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gt.edu.kinal.jmonterroso.learngeek_grupo3.CourseActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/nameCourseDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Category"
                android:background="@color/title"
                android:textColor="@color/background"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/descriptionDetailCourse"
                android:layout_width="match_parent"
                android:layout_below="@id/nameCourseDetail"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="asdfsadf"
                android:background="@color/cardBack"
                android:textColor="@color/cardText"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <ListView
                android:id="@+id/listCourseDetail"
                android:layout_width="match_parent"
                android:layout_below="@id/descriptionDetailCourse"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"></ListView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
