<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/background"
    tools:context="gt.edu.kinal.jmonterroso.learngeek_grupo3.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/registerText"
                android:text="@string/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/user"
                android:layout_centerHorizontal="true"
                android:text="@string/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registerText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/title"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:layout_alignParentRight="false"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/userText"
                android:layout_width="400dp"
                android:drawableLeft="@drawable/ic_user"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:textColor="@color/title"
                android:inputType="text"
                android:layout_alignTop="@+id/user"
                android:layout_alignLeft="@+id/passText"
                android:layout_alignStart="@+id/passText" />

            <TextView
                android:id="@+id/pass"
                android:layout_centerHorizontal="true"
                android:text="@string/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/title"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:layout_alignParentRight="false"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/passText"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_pass"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:textColor="@color/title"
                android:password="true"
                android:layout_alignTop="@+id/pass"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:inputType="text|textVisiblePassword"/>

            <TextView
                android:id="@+id/pass2"
                android:layout_centerHorizontal="true"
                android:text="@string/password2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/title"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:layout_alignParentRight="false"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/passText2"
                android:layout_width="400dp"
                android:drawableLeft="@drawable/ic_pass"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:textColor="@color/title"
                android:layout_alignTop="@+id/pass2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:inputType="text"
                />

            <TextView
                android:id="@+id/email"
                android:layout_centerHorizontal="true"
                android:text="@string/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passText2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/title"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:layout_alignParentRight="false"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/emailText"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_email"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:password="true"
                android:layout_alignTop="@+id/email"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:inputType="text" />

            <TextView
                android:id="@+id/names"
                android:text="@string/nameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layout_below="@+id/emailText"
                android:layout_alignLeft="@+id/email"
                android:layout_alignStart="@+id/email"
                android:layout_marginTop="18dp"/>

            <EditText
                android:id="@+id/nameText"
                android:layout_width="400dp"
                android:drawableLeft="@drawable/ic_name"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:textColor="@color/title"
                android:inputType="text"
                android:layout_alignTop="@+id/names"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loggin"
                android:id="@+id/logins"
                android:background="@android:color/transparent"
                android:textSize="15sp"
                android:textColor="@color/title"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/ic_suc"
                android:layout_marginLeft="70dp"
                android:layout_below="@id/nameText"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/createReg"
                android:id="@+id/regit"
                android:background="@color/title"
                android:drawableLeft="@drawable/add_user"
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/background"
                android:layout_marginLeft="200dp"
                android:layout_below="@id/nameText"
                />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
